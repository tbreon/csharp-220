@model IEnumerable<homework06.Models.Product>

@{
    ViewBag.Title = "Products";
}

@if (Model.Count() > 0)
{
    <table>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            
            <!--Exercise 2 Razor - Add a logic to show Stock Level based on count-->
            <td>
                @switch (product.ProductCount)
                {
                    case 0: // if zero stock
                        @:Out of stock
                        break;
                    case 1:
                        <p>Low Stock</p>
                        break;
                    default:
                        <text>@string.Format("{0} items", product.ProductCount)</text>
                        break;
                }
            </td>

        </tr>
        }
    </table>
}
else
{
    <h2>No product data found.</h2>
}